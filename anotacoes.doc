/* ========== MEDIA QUERIES PARA DESKTOPS (1024px+) ========== */
@media (min-width: 1024px) {
    /* TOPO */
    #opcoes {
        margin-top: 3%;
        margin-bottom: 3%;
        height: 12vh;
        justify-content: space-between;
        padding: 0 5%;
    }
    
    #meio_topo {
        height: 10vh;
        justify-content: space-between;
        padding: 0 5%;
    }
    
    #menu_opcoes {
        position: static;
        flex-direction: row;
        max-height: none;
        opacity: 1;
        width: auto;
        background-color: transparent;
        border: none;
        padding: 0;
        margin: 0;
    }
    
    #menu_opcoes a {
        width: auto;
        margin: 0 10px;
        color: white;
        background-color: transparent;
        font-size: 16px;
    }
    
    #menu_opcoes a:hover {
        background-color: transparent;
        color: #ddd;
    }
    
    #menu {
        display: none; /* Esconde o menu hamburguer em desktop */
    }
    
    #logo {
        height: 30vh;
        background-size: 70%;
        margin-right: 0;
    }
    
    .opc_menu {
        width: auto;
        padding: 0 15px;
    }
    
    /* CONTEÚDO */
    #inf_content {
        flex-direction: row;
        justify-content: center;
        padding: 0 5%;
    }
    
    .opc_inf {
        width: 30vw;
        font-size: 18px;
        margin: 1%;
    }
    
    .contents {
        width: 30%;
    }
    
    #titulo {
        font-size: 32px;
        margin-bottom: 5%;
    }
    
    #logo_copa_2025 {
        width: 30vw;
        height: 35vh;
    }
    
    /* TABELAS */
    .tabela-container {
        padding: 0 10%;
    }
    
    .tabela-classificacao {
        font-size: 16px;
    }
    
    .tabela-classificacao th, 
    .tabela-classificacao td {
        padding: 15px 20px;
    }
    
    /* RODAPÉ */
    #rodape {
        margin-top: 10%;
        font-size: 18px;
        height: 10vh;
        padding: 0 5%;
    }
    
    #complemento1, #complemento {
        justify-content: flex-end;
    }
    
    #insta, #wzp {
        height: 8vh;
        width: 10%;
        margin-right: 3%;
    }
    
    .link_rs {
        transition: 0.3s;
    }
    
    .link_rs:hover {
        color: #ddd;
    }
}
